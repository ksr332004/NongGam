<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/background_img"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <RelativeLayout
                android:id="@+id/title_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/gps_img"
                    android:src="@drawable/icon_gps"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:typeface="sans"
                    android:textColor="#303030"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/area_text"
                    android:text="Test/Text"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/gps_img"
                    android:layout_toEndOf="@id/gps_img"
                    />

                <TextView
                    android:textSize="12sp"
                    android:typeface="sans"
                    android:textColor="#303030"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(11 Text Test)"
                    android:id="@+id/time_text"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_toRightOf="@+id/area_text"
                    android:layout_toEndOf="@+id/area_text"
                    android:layout_alignBottom="@+id/area_text"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_below="@+id/title_container"
                android:gravity="center_vertical"
                android:id="@+id/weather_img_container"
                >

                <ImageView
                    android:id="@+id/weather_img"
                    android:layout_gravity="center"
                    android:layout_width="187dp"
                    android:layout_height="187dp"
                    android:layout_centerHorizontal="true"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/degree_content"
                        android:gravity="center_horizontal"
                        >
                        <TextView
                            android:textColor="#ffff"
                            android:textSize="48sp"
                            android:typeface="sans"
                            android:id="@+id/degree_txt"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textColor="#ffff"
                            android:textSize="15sp"
                            android:typeface="sans"
                            android:id="@+id/summary_txt"
                            android:layout_toRightOf="@id/degree_txt"
                            android:layout_toEndOf="@id/degree_txt"
                            android:layout_alignBottom="@+id/degree_txt"
                            android:layout_marginLeft="3dp"
                            android:layout_marginStart="3dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/degree_content"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="-8dp"
                        >

                        <TextView
                            android:textColor="#ffff"
                            android:textSize="12sp"
                            android:typeface="sans"
                            android:id="@+id/yesterday_txt"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/weather_img_container"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="306dp"
                    android:layout_height="64dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/comment_img"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:id="@+id/weather_icon"
                        android:layout_marginLeft="-3dp"
                        android:layout_marginStart="-3dp"
                        />

                    <TextView
                        android:textColor="#616161"
                        android:textSize="15sp"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:id="@+id/comment_text"

                        android:layout_toRightOf="@+id/weather_icon"
                        android:layout_toEndOf="@+id/weather_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_centerInParent="true"
                        />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>





